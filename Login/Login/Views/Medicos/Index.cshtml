@{
    ViewData["Title"] = "Medicos";
}

<h1>Medicos</h1>

<i onclick="Editar(0)" data-bs-toggle="modal" data-bs-target="#operacionesModal"
   class="btn btn-primary w-25 text-white rounded align-content-center">
    Nuevo registro
</i>

<div class="modal fade" id="operacionesModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Formulario de Laboratorio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="frmOperaciones">
                    <div class="mb-3">
                        <label for="id" class="form-label">ID</label>
                        <input type="text" class="form-control" name="id" id="id" value="0" readonly>
                    </div>

                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre">
                    </div>

                    <div class="mb-3">
                        <label for="apellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" name="apellido" id="apellido">
                    </div>

                    <div class="mb-3">
                        <label for="especialidadId" class="form-label">ID Especialidad</label>
                        <input type="text" class="form-control" name="especialidadId" id="especialidadId">
                    </div>

                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" name="telefono" id="telefono">
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="guardar()" data-bs-dismiss="modal" class="btn btn-success">Enviar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Salir</button>
            </div>
        </div>
    </div>
</div>

<div id="divTabla"></div>

<script src="~/js/generic.js"></script>
<script src="~/js/medicos.js"></script>
