@{
    ViewData["Title"] = "Login";
}
<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<div class="cont">
    <!-- Formulario de Inicio de Sesión -->
    <div class="form sign-in">
        <h2>Bienvenido de vuelta,</h2>
        <form method="post" asp-action="Login">
            <label for="loginCorreo">
                <span>Correo</span>
                <input type="email" name="correo" id="loginCorreo" required />
            </label>
            <label for="loginClave">
                <span>Contraseña</span>
                <input type="password" name="clave" id="loginClave" required />
            </label>
            <button type="submit" class="submit">Iniciar Sesión</button>
        </form>
        @if (ViewData["mensaje"] != null)
        {
            <div class="alert alert-info mt-3">
                @ViewData["mensaje"]
            </div>
        }
    </div>

    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">
                <h2>¿Nuevo aquí?</h2>
                <p>Regístrate</p>
            </div>
            <div class="img__text m--in">
                <h2>¿Ya eres parte de nosotros?</h2>
                <p>Si ya tienes una cuenta, solo inicia sesión, te extrañamos!</p>
            </div>
            <div class="img__btn">
                <span class="m--up">Registrarse</span>
                <span class="m--in">Iniciar Sesión</span>
            </div>
        </div>

        <!-- Formulario de Registro -->
        <div class="form sign-up">
            <h2>Es tiempo de cuidarnos,</h2>
            <form method="post" asp-action="Registrar">
                <label for="regCorreo">
                    <span>Correo</span>
                    <input type="email" name="correo" id="regCorreo" required />
                </label>
                <label for="regClave">
                    <span>Contraseña</span>
                    <input type="password" name="clave" id="regClave" required />
                </label>
                <label for="regConfClave">
                    <span>Confirmar Contraseña</span>
                    <input type="password" name="confClave" id="regConfClave" required />
                </label>
                <button type="submit" class="submit">Registrar</button>
            </form>
            @if (ViewData["mensaje"] != null)
            {
                <div class="alert alert-info">
                    @ViewData["mensajeRegistro"]
                </div>
            }
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-success">
                    @TempData["mensaje"]
                </div>
            }
        </div>
    </div>
</div>

